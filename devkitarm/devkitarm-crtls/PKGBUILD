
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('devkitarm-crtls')
pkgver=1.2.5
pkgrel=1
pkgdesc="devkitARM crtls."
arch=('any')
license=('custom')
url="http://github.com/devkitpro/devkitarm-crtls"
options=(!strip libtool staticlibs)
source=(${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz)
makedepends=('devkitARM')
groups=('gba-dev' 'gp32-dev' 'nds-dev' '3ds-dev')

build() {

  cd $srcdir/$pkgname-$pkgver
  make

}

package() {

  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install

}

sha256sums=('14d2061e160ddd599e22e4eaad6c050f44659442a1551e84e214c49680051c4b')
